{
    "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "strictNullChecks": true,
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
  "include": [
    "**/*"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ],
  "@typescript-eslint/no-misused-promises": [
    "error",
    {
      "checksVoidReturn": false
    }
  ]
}